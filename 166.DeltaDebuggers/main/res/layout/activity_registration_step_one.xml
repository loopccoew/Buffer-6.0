<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Phone Number Field -->
    <EditText
        android:id="@+id/etPhone"
        android:hint="Phone Number"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"
        android:contentDescription="Phone number input field"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="16dp"/>

    <!-- Name Field -->
    <EditText
        android:id="@+id/etName"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"
        android:contentDescription="Name input field"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="16dp"/>

    <!-- Email Field -->
    <EditText
        android:id="@+id/etEmail"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"
        android:contentDescription="Email input field"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="16dp"/>

    <!-- Address Field -->
    <EditText
        android:id="@+id/etAddress"
        android:hint="Address"
        android:inputType="text"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"
        android:contentDescription="Address input field"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="16dp"/>

    <!-- Age Field -->
    <EditText
        android:id="@+id/etAge"
        android:hint="Age"
        android:inputType="number"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"
        android:contentDescription="Age input field"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="16dp"/>

    <!-- Password Field -->
    <EditText
        android:id="@+id/etPassword"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"
        android:contentDescription="Password input field"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="16dp"/>

    <!-- Next Button -->
    <Button
        android:id="@+id/btnNextStep"
        android:text="Next"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"
        android:contentDescription="Next step button"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="16dp"/>
</LinearLayout>
